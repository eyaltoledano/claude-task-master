{
	"models": {
		"main": {
			"provider": "claude-code",
			"modelId": "sonnet",
			"maxTokens": 64000,
			"temperature": 0.2
		},
		"research": {
			"provider": "perplexity",
			"modelId": "sonar",
			"maxTokens": 8700,
			"temperature": 0.1
		},
		"fallback": {
			"provider": "claude-code",
			"modelId": "sonnet",
			"maxTokens": 64000,
			"temperature": 0.2
		}
	},
	"global": {
		"logLevel": "info",
		"debug": false,
		"defaultSubtasks": 5,
		"defaultPriority": "medium",
		"projectName": "Taskmaster",
		"ollamaBaseURL": "http://localhost:11434/api",
		"bedrockBaseURL": "https://bedrock.us-east-1.amazonaws.com",
		"userId": "1234567890",
		"azureBaseURL": "https://your-endpoint.azure.com/",
		"defaultTag": "master"
	},
	"claudeCode": {
		"enabled": true,
		"permissionMode": "acceptEdits",
		"defaultMaxTurns": 3,
		"allowedTools": ["Read", "Write", "Bash"],
		"systemPrompts": {
			"implementation": "You are helping implement a task. Focus on clean, maintainable code."
		}
	}
}

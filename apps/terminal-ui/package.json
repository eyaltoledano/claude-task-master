{
	"name": "@tm/terminal-ui",
	"description": "Task Master Terminal UI - Interactive terminal interface for task management",
	"type": "module",
	"private": true,
	"main": "./dist/index.js",
	"types": "./src/index.tsx",
	"exports": {
		".": "./src/index.tsx"
	},
	"files": ["dist", "README.md"],
	"scripts": {
		"dev": "tsx watch src/index.tsx",
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"lint": "biome check src",
		"format": "biome format --write src",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:unit": "vitest run -t unit",
		"test:integration": "vitest run -t integration",
		"test:ci": "vitest run --coverage --reporter=dot"
	},
	"dependencies": {
		"@tm/cli": "*",
		"@tm/core": "*",
		"ink": "^5.1.0",
		"marked": "^15.0.12",
		"marked-terminal": "^7.3.0",
		"react": "^18.3.1",
		"string-width": "^8.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/marked-terminal": "^6.1.1",
		"@types/node": "^22.10.5",
		"@types/react": "^18.3.18",
		"ink-testing-library": "^4.0.0",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"vitest": "^2.1.8"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"task-master",
		"terminal-ui",
		"ink",
		"task-management",
		"productivity",
		"tui"
	],
	"author": "",
	"license": "MIT",
	"typesVersions": {
		"*": {
			"*": ["src/*"]
		}
	},
	"version": ""
}

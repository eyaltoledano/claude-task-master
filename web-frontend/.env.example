# TaskMaster Web API Environment Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# API Configuration
API_PREFIX=/api
API_KEY=test-api-key-123

# Security Configuration
REQUIRE_AUTH=true
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_LIMIT_MB=10
UPLOAD_DIR=uploads

# TaskMaster Integration
TASKMASTER_ENABLED=true
TASKMASTER_CONFIG_PATH=../config
TASKMASTER_PROJECTS_PATH=../projects

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Swagger Documentation
SWAGGER_TITLE=TaskMaster Web API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=A comprehensive task management API with project, PR, CR, and task management capabilities

# Database Configuration (if needed in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=taskmaster
# DB_USER=taskmaster
# DB_PASSWORD=password

# External Services (if needed)
# AI_SERVICE_URL=https://api.openai.com/v1
# AI_API_KEY=your-ai-api-key

# Cache Configuration (if needed)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Monitoring and Analytics (if needed)
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_ENABLED=false

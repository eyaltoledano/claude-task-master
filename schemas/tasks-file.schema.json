{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tasks File",
  "description": "Schema for the tasks.json file",
  "type": "object",
  "patternProperties": {
    "^.+$": {
      "description": "A tag grouping tasks",
      "type": "object",
      "properties": {
        "tasks": {
          "description": "List of tasks under this tag",
          "type": "array",
          "items": {
            "$ref": "task.schema.json"
          }
        },
        "metadata": {
          "description": "Metadata for this tag",
          "type": "object",
          "properties": {
            "created": {
              "type": "string",
              "format": "date-time"
            },
            "updated": {
              "type": "string",
              "format": "date-time"
            },
            "description": {
              "type": "string"
            }
          },
          "required": [
            "created",
            "updated",
            "description"
          ]
        }
      },
      "required": [
        "tasks",
        "metadata"
      ]
    }
  },
  "additionalProperties": false
}

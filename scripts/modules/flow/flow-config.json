{
	"claudeCode": {
		"enabled": true,
		"permissionMode": "acceptEdits",
		"defaultMaxTurns": 3,
		"allowedTools": [
			"Read",
			"Write",
			"Bash"
		],
		"systemPrompts": {
			"default": "You are Claude Code, an AI assistant helping with software development.",
			"subtask": "You are Claude Code, helping implement a specific subtask. Focus on the task requirements and context provided."
		}
	},
	"safety": {
		"mode": "standard",
		"modes": {
			"vibe": {
				"autoLint": false,
				"autoBuild": false,
				"requireTests": false,
				"skipConflictCheck": true
			},
			"standard": {
				"autoLint": true,
				"autoBuild": true,
				"requireTests": false,
				"skipConflictCheck": false
			},
			"strict": {
				"autoLint": true,
				"autoBuild": true,
				"requireTests": true,
				"skipConflictCheck": false,
				"requireManualApproval": true
			}
		},
		"buildValidation": {
			"enabled": true,
			"commands": {
				"npm": "npm run build",
				"yarn": "yarn build",
				"pnpm": "pnpm build"
			},
			"timeout": 120000,
			"failOnError": true
		},
		"lintValidation": {
			"enabled": true,
			"tools": [
				"biome",
				"eslint",
				"prettier"
			],
			"commands": {
				"biome": "npx biome check .",
				"eslint": "npx eslint .",
				"prettier": "npx prettier --check ."
			},
			"timeout": 60000,
			"failOnError": false,
			"autoFix": false
		}
	},
	"theme": {
		"default": "auto"
	},
	"worktrees": {
		"maxRecent": 10
	},
	"tasks": {
		"defaultView": "list",
		"visibleRows": 20
	},
	"chat": {
		"maxHistory": 100,
		"streamingEnabled": true
	},
	"ast": {
		"enabled": false,
		"cacheMaxAge": "2h",
		"cacheMaxSize": "100MB",
		"supportedLanguages": [
			"javascript",
			"typescript",
			"python",
			"go"
		],
		"excludePatterns": [
			"node_modules/**",
			"dist/**",
			"build/**",
			".git/**",
			"*.min.js"
		],
		"contextInclusion": {
			"maxFunctions": 10,
			"maxComplexityScore": 8,
			"includeImports": true,
			"includeDependencies": true
		}
	},
	"notifications": {
		"enabled": true,
		"channels": {
			"app": {
				"enabled": true,
				"duration": 3000
			},
			"email": {
				"enabled": true,
				"webhook": null,
				"recipient": null,
				"events": [
					"error",
					"pr-created",
					"pr-merged",
					"checks-failed"
				]
			},
			"slack": {
				"enabled": true,
				"webhook": null,
				"events": [
					"error",
					"pr-created",
					"pr-merged",
					"checks-failed",
					"session-completed"
				]
			},
			"telegram": {
				"enabled": true,
				"token": null,
				"chatId": null,
				"events": [
					"error",
					"critical",
					"pr-merged"
				]
			},
			"whatsapp": {
				"enabled": false,
				"events": [
					"critical"
				]
			},
			"sms": {
				"enabled": true,
				"service": "twilio",
				"events": [
					"critical",
					"error"
				]
			}
		},
		"escalation": {
			"enabled": true,
			"rules": [
				{
					"trigger": "immediate",
					"channels": [
						"app"
					]
				},
				{
					"trigger": "5min",
					"channels": [
						"app",
						"slack"
					]
				},
				{
					"trigger": "15min",
					"channels": [
						"app",
						"slack",
						"email"
					]
				},
				{
					"trigger": "critical",
					"channels": [
						"app",
						"slack",
						"email",
						"telegram",
						"sms"
					]
				}
			]
		},
		"templates": {
			"prCreated": {
				"title": "PR Created: {{prNumber}}",
				"message": "Pull request #{{prNumber}} has been created for task {{taskId}}",
				"priority": "normal"
			},
			"prMerged": {
				"title": "PR Merged: {{prNumber}}",
				"message": "Pull request #{{prNumber}} has been successfully merged",
				"priority": "normal"
			},
			"checksFailed": {
				"title": "PR Checks Failed: {{prNumber}}",
				"message": "Pull request #{{prNumber}} has failing checks: {{failedChecks}}",
				"priority": "high"
			},
			"sessionCompleted": {
				"title": "Claude Session Completed",
				"message": "Claude Code session completed for task {{taskId}}",
				"priority": "normal"
			},
			"error": {
				"title": "Error: {{errorType}}",
				"message": "An error occurred: {{errorMessage}}",
				"priority": "high"
			},
			"critical": {
				"title": "Critical Alert: {{alertType}}",
				"message": "Critical issue detected: {{alertMessage}}",
				"priority": "critical"
			}
		},
		"preferences": {
			"quietHours": {
				"enabled": false,
				"start": "22:00",
				"end": "08:00",
				"timezone": "local",
				"allowCritical": true
			},
			"frequency": {
				"maxPerHour": 10,
				"maxPerDay": 50,
				"cooldownMinutes": 5
			},
			"filtering": {
				"duplicateWindow": "5min",
				"minimumPriority": "normal"
			}
		}
	},
	"conflictDetection": {
		"checkMergeConflicts": true,
		"notifyOnConflicts": true,
		"pauseAutomationOnConflicts": true,
		"humanInterventionRequired": true
	},
	"worktreeLifecycle": {
		"enabled": true,
		"autoCleanupOnMerge": true,
		"preserveUncommitted": true,
		"backupBeforeCleanup": true,
		"astCacheInvalidation": true,
		"taskStatusUpdates": true,
		"lifecycleEvents": {
			"trackPRCreation": true,
			"trackPRMerge": true,
			"trackSessionCompletion": true,
			"trackCleanupRequests": true
		}
	},
	"taskStatusIntegration": {
		"enabled": true,
		"autoUpdateOnMerge": true,
		"addPRReference": true,
		"updateMetrics": true,
		"cascadeSubtasks": false,
		"supportedStatuses": [
			"pending",
			"in-progress",
			"done",
			"completed",
			"review",
			"deferred",
			"cancelled",
			"blocked"
		],
		"completionStatuses": [
			"done",
			"completed"
		]
	},
	"branchAwareness": {
		"enabled": true,
		"rememberLastBranch": true,
		"showBranchInStatus": true,
		"autoDetectBranchSwitch": true,
		"lastWorkingBranch": "joedanz/tm-flow",
		"currentBranch": "joedanz/tm-flow",
		"branchHistory": [],
		"maxHistorySize": 10,
		"lastUpdated": "2025-07-03T19:49:59.511Z"
	}
}
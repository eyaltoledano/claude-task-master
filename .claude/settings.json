{
	"version": "1.0.0",
	"hooks": {
		"PreToolUse": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "claude-hooks run tmux-claude-status"
					}
				]
			},
			{
				"matcher": "^Bash$",
				"hooks": [
					{
						"type": "command",
						"command": "claude-hooks run package-manager-enforcement"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "claude-hooks run tmux-claude-status"
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "claude-hooks run tmux-claude-status"
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "claude-hooks run tmux-claude-status"
					}
				]
			}
		]
	}
}
